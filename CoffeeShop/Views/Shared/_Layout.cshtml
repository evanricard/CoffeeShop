<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Sedgwick+Ave+Display');
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@RenderBody()
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @*<img src="~/Images/coffee.jpg" class="navbar-brand" style="height: 100px; margin: 10px;" />*@
                @*Toggle when screen gets smaller*@
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coffee Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" });
                @*@Html.ActionLink("Summary", "Summary", "Home", new { area = "" }, new { @class = "navbar-brand" });*@
                @Html.ActionLink("User Registration", "UserRegistration", "Home", new { area = "" }, new { @class = "navbar-brand" }));
                @Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, new { @class = "navbar-brand" }));

            </div>
        </div>
    </div>
    <div class="container body-content">
        <hr />
        <footer class="footer modal-footer col-xs-12" style="">
            <p class="">&copy; @DateTime.Now - Coffee Shop Application - Evan Ricard</p>
            <p class="">We take bitcoin!<span class="glyphicon glyphicon-bitcoin"></span></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
